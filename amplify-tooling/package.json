{
  "name": "amplify-tooling",
  "version": "1.0.0",
  "private": true,
  "description": "Isolated package for Amplify backend tooling and pipeline deploy (pins graphql@15.x)",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "pipeline-deploy": "npx ampx pipeline-deploy --branch $AWS_BRANCH --app-id $AWS_APP_ID --debug",
    "generate-outputs": "npm ampx generate outputs --branch $AWS_BRANCH --app-id $AWS_APP_ID --out-dir ."
  },
  "dependencies": {
    "@aws-amplify/backend": "^1.0.0",
    "@aws-amplify/backend-cli": "1.8.0",
    "aws-cdk-lib": "^2.0.0",
    "constructs": "^10.0.0",
    "graphql": "15.10.1"
  },
  "devDependencies": {
    "typescript": "^5.0.0"
  },
  "overrides": {
    "graphql": "15.10.1",
    "@aws-sdk/types": "^3.0.0"
  },
  "license": "UNLICENSED"
}