{
  "IDX.aI.enableInlineCompletion": true,
  "IDX.aI.enableCodebaseIndexing": true,
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/.hg/store/**": true,
    "**/.next/**": true,
    "**/.amplify/**": true,
    "**/amplify_outputs*/**": true
  },
  "files.exclude": {
    "**/.amplify": true,
    "**/.DS_Store": true,
    "**/.git": true,
    "**/.hg": true,
    "**/.next": true,
    "**/.svn": true,
    "**/amplify_outputs*": true,
    "**/build": true,
    "**/CVS": true,
    "**/dist": true,
    "**/node_modules": true,
    "**/Thumbs.db": true
  },
  "typescript.preferences.autoImportFileExcludePatterns": [
    "**/node_modules/@types/**",
    "**/node_modules/**"
  ],
  "javascript.preferences.autoImportFileExcludePatterns": [
    "**/node_modules/@types/**",
    "**/node_modules/**"
  ],
  "typescript.tsserver.maxTsServerMemory": 4096,
  "search.exclude": {
    "**/.amplify": true,
    "**/.next": true,
    "**/build": true,
    "**/dist": true
  }
}
